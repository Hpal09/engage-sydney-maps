# ==============================================================================
# Performance Optimizations - Environment Variables (Phases 1-6)
# ==============================================================================
# Copy this file to .env.local and adjust values as needed.
# These variables control the behavior of all performance optimizations.
# ==============================================================================

# PHASE 1: GPS Performance Tuning
NEXT_PUBLIC_GPS_THROTTLE_MS=1000
NEXT_PUBLIC_GPS_MAX_ACCURACY=50
NEXT_PUBLIC_GPS_MAX_WALKING_SPEED=3.5
NEXT_PUBLIC_GPS_MAXIMUM_AGE=5000

# PHASE 1: Animation Performance
NEXT_PUBLIC_ANIMATION_FRAME_INTERVAL=100

# PHASE 1: Indoor Graph Caching
NEXT_PUBLIC_ENABLE_INDOOR_GRAPH_CACHE=true

# PHASE 2: Spatial Indexing
NEXT_PUBLIC_USE_SPATIAL_INDEX=true

# PHASE 3: Web Workers
NEXT_PUBLIC_USE_WEB_WORKERS=true

# PHASE 5: Canvas Rendering
NEXT_PUBLIC_USE_CANVAS_RENDERING=true

# PHASE 6: Kalman Filter GPS
NEXT_PUBLIC_USE_KALMAN_FILTER=true

# UX Enhancement: Device Heading Navigation Pointer
NEXT_PUBLIC_USE_DEVICE_HEADING_POINTER=true

# ==============================================================================
# See .env.local for detailed descriptions of each variable
# ==============================================================================
